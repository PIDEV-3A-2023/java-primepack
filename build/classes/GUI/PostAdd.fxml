<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="postView" alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="GUI.PostAddController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Add a new post" style="-fx-font-size: 16pt;"/>
     <TextField fx:id="themeField" promptText="Theme" />
    <TextArea fx:id="contentArea" promptText="Content" />
  
    <Button fx:id="chooseImageButton" text="Choose Image" onAction="#chooseImage" />
    <TextField fx:id="imageTextField" promptText="Image Name" editable="false" />


            <HBox prefHeight="0.0" prefWidth="567.0" spacing="10.0">
                 <Button fx:id="saveButton" onAction="#savePost" text="Save" />
                 <Button fx:id="backButton" onAction="#back" text="Back" />
            </HBox>
    
</VBox>
