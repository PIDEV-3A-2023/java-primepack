<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>


<VBox fx:id="postView" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.PostAddController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label style="-fx-font-size: 16pt;" text="Add a new post" />
     <TextField fx:id="themeField" promptText="Theme" />
    <TextArea fx:id="contentArea" promptText="Content" />
  
    <Button fx:id="chooseImageButton" onAction="#chooseImage" text="Choose Image" />
    <TextField fx:id="imageTextField" editable="false" promptText="Image Name" />

            <HBox prefHeight="0.0" prefWidth="567.0" spacing="400.0">
                  <Button fx:id="saveButton" onAction="#savePost" text="Save" />
                 <Button fx:id="backButton" onAction="#back" text="Back" />
            </HBox>
    
    
</VBox>
